<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.coleapps.wgucoursetracker3">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".DBProvider"
            android:authorities="com.coleapps.coursetrackerapp.dbprovider"
            android:exported="false" />

        <activity
            android:name=".TermList"
            android:label="@string/title_activity_term_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CourseList"
            android:label="@string/title_activity_course_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AssessmentList"
            android:label="@string/title_activity_assessment_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditOrViewTerm"
            android:label="@string/title_activity_view_term"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditOrViewCourse"
            android:label="@string/title_activity_view_course"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".EditOrViewAssessment"
            android:label="@string/title_activity_edit_or_view_assessment"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>